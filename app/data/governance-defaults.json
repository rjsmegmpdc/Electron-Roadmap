  "policies": [
    {
      "policy_name": "Security Review",
      "policy_category": "Security",
      "policy_description": "All projects must undergo security risk assessment before deployment",
      "policy_owner": "Chief Information Security Officer",
      "version": "1.0",
      "applicability_rules": "All projects involving IT systems or data"
    },
    {
      "policy_name": "Privacy Assessment",
      "policy_category": "Privacy",
      "policy_description": "Projects handling personal data must complete privacy impact assessment",
      "policy_owner": "Privacy Officer",
      "version": "1.0",
      "applicability_rules": "All projects handling PII or sensitive data"
    },
    {
      "policy_name": "Architecture Approval",
      "policy_category": "Architecture",
      "policy_description": "Technical architecture must be reviewed and approved by architecture board",
      "policy_owner": "Chief Architect",
      "version": "1.0",
      "applicability_rules": "All technology projects"
    },
    {
      "policy_name": "Budget Approval",
      "policy_category": "Finance",
      "policy_description": "Project budget must be approved by finance and appropriate management level",
      "policy_owner": "Chief Financial Officer",
      "version": "1.0",
      "applicability_rules": "All projects with budget >$50,000"
    },
    {
      "policy_name": "Procurement Compliance",
      "policy_category": "Procurement",
      "policy_description": "All vendor contracts must follow procurement policies and approval matrix",
      "policy_owner": "Procurement Manager",
      "version": "1.0",
      "applicability_rules": "All projects engaging external vendors"
    },
    {
      "policy_name": "Legal Review",
      "policy_category": "Legal",
      "policy_description": "Contracts and agreements must be reviewed by legal team",
      "policy_owner": "General Counsel",
      "version": "1.0",
      "applicability_rules": "All projects with contractual obligations"
    }
  ],
