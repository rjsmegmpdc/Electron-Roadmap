{
  "name": "roadmap-tool",
  "version": "1.0.0",
  "description": "A collaborative roadmap planning tool",
  "main": "dist/main/main/main.js",
  "build": {
    "appId": "com.roadmaptool.app",
    "productName": "Roadmap Tool",
    "directories": {
      "output": "dist-packages",
      "buildResources": "build"
    },
    "afterSign": false,
    "forceCodeSigning": false,
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "signtool": false
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:vite": "vite app/renderer --port 5173",
    "dev:electron": "tsc --project tsconfig.build.json && cross-env NODE_ENV=development electron dist/main/main/main.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build app/renderer --outDir ../../dist/renderer",
    "build:main": "tsc --project tsconfig.build.json",
    "build:full": "npm run clean && npm run build",
    "clean": "rimraf dist dist-packages",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest tests/security --verbose",
    "test:integration": "jest tests/integration --verbose",
    "test:performance": "jest tests/performance --verbose --runInBand --testTimeout=60000",
    "test:all": "jest tests --verbose --runInBand",
    "test:runner": "node scripts/test-runner.js",
    "test:ci": "node scripts/test-runner.js --ci --reports",
    "test:full": "node scripts/test-runner.js --all --reports",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "lint": "eslint app/**/*.{ts,tsx} --fix",
    "format": "prettier --write app/**/*.{ts,tsx,css}",
    "typecheck": "tsc --noEmit",
    "package": "npm run build:full && electron-builder",
    "package:win": "npm run build:full && electron-builder --win",
    "package:mac": "npm run build:full && electron-builder --mac",
    "package:linux": "npm run build:full && electron-builder --linux",
    "dist": "npm run build:full && electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "roadmap",
    "planning",
    "electron",
    "collaboration"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/uuid": "^10.0.0",
    "adm-zip": "^0.5.16",
    "better-sqlite3": "^12.4.1",
    "body-parser": "^2.2.0",
    "bonjour-service": "^1.3.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "eventsource": "^4.0.0",
    "express": "^5.1.0",
    "papaparse": "^5.5.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "uuid": "^13.0.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.37.0",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.6.2",
    "react-test-renderer": "^19.2.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "wait-on": "^9.0.1"
  }
}
